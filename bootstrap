#!/bin/bash
REPO_BASE=$HOME/repos
GUI=xorg slim awesome thunar terminator chromium
DEV=vim-gtk git python-pip 
PIP=virtualenv virtualenvwrapper pyflakes autopep8

sudo apt-get install -y $GUI
sudo apt-get install -y $DEV
sudo pip install $PIP

REPO_BASE=$HOME/repos

mkdir $REPO_BASE
git clone http://github.com/omaraboumrad/dot.git $REPO_BASE

